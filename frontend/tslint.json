{
  "extends": [
    "tslint:recommended",
    "tslint-consistent-codestyle",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "jsRules": {
    "quotemark": [
      true,
      "single",
      "jsx-double",
      "avoid-template",
      "avoid-escape"
    ]
  },
  "rules": {
    "quotemark": [
      true,
      "single",
      "jsx-double",
      "avoid-template",
      "avoid-escape"
    ],

    // tslint-consistent-codestyle
    "no-static-this": true,
    "early-exit": true,
    "prefer-while": true,

    "interface-name": [true, "never-prefix"],
    "object-literal-sort-keys": false
  }
}
